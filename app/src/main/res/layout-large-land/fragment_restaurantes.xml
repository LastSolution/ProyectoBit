<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_marginBottom="55dp"
    android:background="@color/Greensecondlight"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.abmrestaurante.RestauranteFragment"
    android:orientation="horizontal"
    android:layout_marginHorizontal="350dp">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvEmpresas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"

       >

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/NuevaEmpresa"
        android:layout_width="80dp"
        android:layout_height="96dp"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|center_horizontal"
        android:src="@drawable/ic_baseline_add_24"
        android:contentDescription="NuevaEmpresa"
        app:fabCustomSize="80dp"
        android:elevation="100dp"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>

