<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment_plato_Mesa"
    android:layout_gravity="center"
    android:id="@+id/frameplato">

    <!-- TODO: Update blank fragment layout -->
   <androidx.cardview.widget.CardView
       android:layout_width="350dp"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:elevation="30dp"
       app:cardCornerRadius="50dp">

       <LinearLayout
           android:layout_width="350dp"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="200dp"
               android:layout_gravity="center"
               android:layout_marginTop="10dp"
               android:id="@+id/imgplatomesa"
               android:scaleType="centerCrop"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/txtnomplatomesa"
               android:textAlignment="center"
               android:textSize="30dp"
               android:text="nombre plato"
               android:textColor="@color/GreenSecondDark"
               android:gravity="center_horizontal" />


           <TextView
               android:id="@+id/txtdescripcionplatomesa"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:gravity="center_horizontal"
               android:text="Descripcion plato"
               android:textAlignment="center"
               android:textColor="@color/GreenPLight"
               android:textSize="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-"
                    android:id="@+id/btnrestarcantidad"
                    android:gravity="top" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:id="@+id/txtcantplato"
                    android:text="1"/>
                <Button
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:id="@+id/btnSumarCant"
                    android:textAlignment="gravity"
                    android:gravity="top"
                    />

            </LinearLayout>



           <com.google.android.material.button.MaterialButton
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               android:id="@+id/btnagregarplatopedido"
               android:text="Pedir plato"
               android:layout_marginHorizontal="40dp"/>

           <com.google.android.material.button.MaterialButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:id="@+id/btncerrarfragmentplato"
               android:text="Volver"
               android:layout_gravity="center"
             android:layout_marginBottom="10dp"/>


       </LinearLayout>


   </androidx.cardview.widget.CardView>

</FrameLayout>