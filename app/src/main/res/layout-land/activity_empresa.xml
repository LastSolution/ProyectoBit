<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NUEVA EMPRESA"
        android:textSize="30dp"
        android:id="@+id/tituloEmpresa"
        android:gravity="center_horizontal" />
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="25dp"
    >

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EditEmpNombre"
        android:hint="Nombre "
        />
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EditEmpRut"
        android:hint="Rut " />
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EditDireccion"
        android:hint="Direccion"
        />
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EditEmpTel"
        android:hint="Telefono "/>
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/EditEmpCorreo"
        android:hint="Correo"/>
</LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginHorizontal="25dp"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logo "
        android:textSize="25dp"
        android:gravity="center"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_baseline_image_24"
        android:onClick="AbrirAlmacenamiento"
        android:id="@+id/imgLogo"
        android:scaleType="centerCrop"
       />

    </LinearLayout>


</LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:id="@+id/BtnEmpresaAdd"
        android:layout_gravity="center_horizontal"
        android:text="Agregar"/>
</LinearLayout>